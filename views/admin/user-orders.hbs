<section class="container mt-5">
    <div class="col-md-12">
        <h3 class="text-center">Orders from <strong>'{{userOrders.0.userName}}'</strong></h3>
        <hr>
    </div>
    <div style="overflow-x: auto;padding-left: 1em;padding-right: 1em;" class="row">
        <table class="table col-md-12 table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Date</th>
                    <th>Address</th>
                    <th>Pincode</th>
                    <th>Mobile</th>
                    <th>Amount</th>
                    <th>Payment</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {{#if userOrders}}
                {{#each userOrders}}
                <tr>
                    <th>{{this.date}}</th>
                    <td>{{this.deliveryDetails.address}}</td>
                    <td>{{this.deliveryDetails.pincode}}</td>
                    <td>{{this.deliveryDetails.mobile}}</td>
                    <td>{{this.totalAmount}}</td>
                    <td>{{this.paymentMethod}}</td>
                    <td id="status-{{this._id}}">{{this.status}}</td>
                </tr>
                {{/each}}
                {{else}}
                <div class="col-md-12">
                    <h4 class="text-center text-danger">No orders found</h4>
                </div>
                {{/if}}
            </tbody>
        </table>
    </div>
</section>